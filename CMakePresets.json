{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "description": "Debug build with g++",
      "displayName": "Debug",
      "binaryDir": "${sourceDir}/cmake/build-debug/",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wshadow -Wconversion -Wpedantic"
      }
    },
    {
      "name": "release",
      "description": "Release build with g++",
      "inherits": "default",
      "displayName": "Release",
      "binaryDir": "${sourceDir}/cmake/build-release/",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_CXX_FLAGS": "-O3 DNDEBUG"
      }
    }
  ]
}