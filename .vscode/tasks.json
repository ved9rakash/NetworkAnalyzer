{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "CMake configuration (Default Preset)",
      "command": "cmake",
      "args": [
        "--preset",
        "default"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Details generated by CMake."
    },
    {
      "type": "shell",
      "label": "Make Build",
      "command": "make",
      "args": [
        "-C",
        "${workspaceFolder}/cmake/build-debug/",
        "VERBOSE=1"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build the project with CMake"
    },
    {
      "type": "shell",
      "label": "Run executable",
      "command": "${workspaceFolder}/cmake/build-debug/src/learntools",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "test",
      "detail": "Run compiled executable."
    },
    {
      "type": "shell",
      "label": "Run Tests",
      "command": "${workspaceFolder}/cmake/build-debug/test/learntools_test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "test",
      "detail": "Test run executable."
    }
  ]
}